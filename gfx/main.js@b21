var arrLength=0;
var Request = new Object();
Request = GetRequest();
var brand = Request['reso'];
if(brand===undefined){
	brand="1440p";
}
var btnNum = document.getElementsByClassName('downBtn').length;
var btnSize=document.getElementsByClassName('downBtn');
var btnFontSize=30000/document.body.clientWidth;
	for (i=1;i<btnNum;i++){
		btnSize[i].style.fontSize=btnFontSize+'px';
	}
function SortData1080(x,y){
    return y[2] - x[2];  
}

function SortData1440(x,y){
    return y[3] - x[3];  
}


document.getElementById("btn1").style.borderColor='#75CBA8';
document.getElementById("btn2").style.borderColor='#37916C';


	


function ShowBar(brand){
	var socLogo,fontColor;
	
	for(var socNum=0;socNum<arr.length;socNum++){
		switch(arr[socNum][0]){
			case '苹果':
			socLogo='../LOGO/apple.png';
			fontColor="#ABC3E3";
			break;
			
			case '高通':
			socLogo='../LOGO/snapdragon.png';
			fontColor="#FF5E23";
			break;
			
			case '三星':
			socLogo='../LOGO/samsung.png';
			fontColor="#00BDFF";
			break;
			
			case '小米':
			socLogo='../LOGO/xiaomi.png';
			fontColor="#FF6900";
			break;
			
			case '联发科':
			socLogo='../LOGO/mediatek.png';
			fontColor="#FB9D1A";
			break;
			
			case '华为':
			socLogo='../LOGO/huawei.png';
			fontColor="#E50C0C";
			break;
			
			case '紫光':
			socLogo='../LOGO/unisoc.png';
			fontColor="#730567";
			break;
			
			case '英伟达':
			socLogo='../LOGO/nvidia.png';
			fontColor="#77B900";
			break;
			
			case '晶晨':
			socLogo='../LOGO/amlogic.png';
			fontColor="#153293";
			break;
			
			
			case '谷歌':
			socLogo='../LOGO/google.png';
			fontColor="#4285F4";
			break;
			
			
			case '博通':
			socLogo='../LOGO/broadcom.png';
			fontColor="#e21736";
			break;
		
		}

		var axisNum=document.getElementsByClassName('ratioLineHeight');
		var axisNumLength=axisNum.length-1;

		var ubound1080=350;
		var maxStep1080=ubound1080/100;
		var step1080=ubound1080/axisNumLength;


		var ubound1440=150;
		var maxStep1440=ubound1440/100;
		var step1440=ubound1440/axisNumLength;
		
		var stepAxis=0;
		// alert(step);
		if(brand=='1080p'){
	
			arr.sort(SortData1080); 
			document.getElementById("btn1").style.backgroundColor='#75CBA8';

			for(i=0;i<axisNumLength+1;i++){
				axisNum[i].innerHTML='&nbsp;'+stepAxis;
				stepAxis=stepAxis+step1080;
			}
			
			document.write(
				'<tr><td class="socName" style="height:'+60000/document.body.clientWidth+'px;font-size:'+28000/document.body.clientWidth+'px;color:'+fontColor+'">'+arr[socNum][1]+'</td>'+
			'<td class="logo"><img src='+socLogo+'></td>'+ 
				'<td><div class="ratioBar" style="height:'+32000/document.body.clientWidth+'px">'+
			'<div class="ratio2" style="font-size:'+31000/document.body.clientWidth+'px;width:'+arr[socNum][2]/maxStep1080+'%"><a>'+arr[socNum][2].toFixed(0)+
			'</a></div>'+
			'</div></td></tr>');
			}


			else{

				
				arr.sort(SortData1440);
				document.getElementById("btn2").style.backgroundColor='#37916C';
				for(i=0;i<axisNumLength+1;i++){
					axisNum[i].innerHTML='&nbsp;'+stepAxis;
					stepAxis=stepAxis+step1440;
				}
				document.write(
					'<tr><td class="socName" style="height:'+60000/document.body.clientWidth+'px;font-size:'+28000/document.body.clientWidth+'px;color:'+fontColor+'">'+arr[socNum][1]+'</td>'+
				'<td class="logo"><img src='+socLogo+'></td>'+ 
					'<td><div class="ratioBar" style="height:'+32000/document.body.clientWidth+'px">'+
				'<div class="ratio" style="font-size:'+31000/document.body.clientWidth+'px;width:'+arr[socNum][3]/maxStep1440+'%"><a>'+arr[socNum][3].toFixed(0)+'</a></div>'+
				
				'</div></td></tr>');
				
			}
            DrawRatio();

		
			
		arrLength=arrLength+1;				
		}
			
	}
	
	




function GetRequest() {
    var url = location.search; 
    var theRequest = new Object();
    if (url.indexOf("?") != -1) {
        var str = url.substr(1);
        strs = str.split("&");
        for(var i = 0; i < strs.length; i ++) {
            theRequest[strs[i].split("=")[0]]=decodeURI(strs[i].split("=")[1]);
        }
    }
    return theRequest;
} 

function ChangeView(brand){
    if (brand=='home'){
        window.location.href='../';
    }
    else{
        window.location.href='?reso='+brand;
    }
	
}

function DrawRatio(){
    var viewHeight=document.getElementsByClassName('ratioLineHeight');
    var i;
        for(i=0;i<viewHeight.length;i++){
		viewHeight[i].style.height=document.body.offsetHeight -240+'px';
}
}
	


function DownloadFigure(fileName){

    var el=document.querySelector("#mainLayout");
    html2canvas(el,{
            backgroundColor: "#000000",
            windowWidth:1500,
            
    }).then(canvas => {
    
    const link = document.createElement('a'); 
    const event = new MouseEvent('click'); 
    link.download = fileName+'.png'; 
    link.href = canvas.toDataURL(); 
    link.dispatchEvent(event);
    });
 
}
  

	